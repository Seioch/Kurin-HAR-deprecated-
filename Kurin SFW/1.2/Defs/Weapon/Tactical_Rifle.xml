<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseMakeableGun">
	<defName>Kurin_Gun_Assault_Rifle</defName>
	<label>kurin assault rifle</label>
	<description>A unique Kurin developed assault rifle. Faster projectiles and higher armor penetration at the cost of lower damage and smaller burst. Cheaper to manufacture than the traditional assault rifle.</description>
	<graphicData>
		<texPath>Kurin/Weapon/Assault_Rifle/Texture</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<soundInteract>Interact_Rifle</soundInteract>
	<statBases>
		<WorkToMake>48000</WorkToMake>
		<Mass>3.0</Mass>
		<AccuracyTouch>0.60</AccuracyTouch>
		<AccuracyShort>0.70</AccuracyShort>
		<AccuracyMedium>0.60</AccuracyMedium>
		<AccuracyLong>0.50</AccuracyLong>
		<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
	</statBases>
	<weaponTags>
		<li>Kurin_Rifle</li>
	</weaponTags>
	<costList>
		<Steel>75</Steel>
		<ComponentIndustrial>5</ComponentIndustrial>
	</costList>
	<recipeMaker>
		<researchPrerequisite>PrecisionRifling</researchPrerequisite>
		<skillRequirements>
			<Crafting>6</Crafting>
		</skillRequirements>
	</recipeMaker>
	<verbs>
		<li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Kurin_Bullet_Assault_Rifle</defaultProjectile>
			<warmupTime>1.0</warmupTime>
			<range>30.9</range>
			<burstShotCount>2</burstShotCount>
			<ticksBetweenBurstShots>9</ticksBetweenBurstShots>
			<soundCast>Kurin_Shot_Tactical_Rifle</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		</li>
	</verbs>
	<tools>
		<li>
			<label>stock</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
		<li>
			<label>barrel</label>
			<capacities>
				<li>Blunt</li>
				<li>Poke</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
	</tools>
</ThingDef>

<ThingDef ParentName="BaseBullet">
	<defName>Kurin_Bullet_Assault_Rifle</defName>
	<label>kurin assault rifle bullet</label>
	<projectile>
		<damageDef>Bullet</damageDef>
		<damageAmountBase>9</damageAmountBase>
		<stoppingPower>1.1</stoppingPower>
		<armorPenetrationBase>0.32</armorPenetrationBase>
		<speed>90</speed>
	</projectile>
	<graphicData>
		<texPath>Things/Projectile/Bullet_small</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
</ThingDef>

